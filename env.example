# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB, use: mongodb://localhost:27017/sawmill
# For MongoDB Atlas, use your connection string from the Atlas dashboard
MONGODB_URI=mongodb://localhost:27017/sawmill

# JWT Secret Key
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_in_production_to_a_secure_random_string

# CORS Configuration
# Frontend URL that's allowed to access the API
# For development: http://localhost:5173
# For production: https://3-d-s-sawmill.vercel.app
CORS_ORIGIN=http://localhost:5173

